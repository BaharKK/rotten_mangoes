<%= link_to "Back to User Management", admin_users_path %><br/>
<h2><%= @user.full_name %> (<%= link_to "edit", edit_admin_user_path(@user) %>, <%= link_to "delete", admin_user_path(@user), method: :delete, confirm: "You sure?" %>)</h2>
<h4>Email: <%= @user.email %></h4>
<h5><%= formatted_date(@user.created_at) %></h5>
<h5><%= formatted_date(@user.updated_at) %></h5>

<hr>

<h3>Reviews of <em><%= @user.full_name %></em></h3>
<% if current_user %>
  <% @user.reviews.each do |review| %>
    <p><%= review.text %></p>
    <p><%= review.rating_out_of_ten %>/10</p>
  <% end %>
  <p><%= link_to "Write a review!", new_movie_review_path(@movie) %></p>
<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to see reviews and add your own.</p> 
<% end %>